generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Marker {
  id        String   @id @default(uuid())
  name      String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  password  String
  markerId  String
  createdAt DateTime @default(now())
  likes     Int      @default(0)
  marker    Marker   @relation(fields: [markerId], references: [id])
}
